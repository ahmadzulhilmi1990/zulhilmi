<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whitesmoke"
    tools:context="com.exs.appexssynergy.Dashboard">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <include
            android:id="@+id/view_data_download"
            layout="@layout/fragment_data_download"
            android:visibility="visible"/>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:background="@color/white"
            android:layout_alignParentBottom="true"
            android:layout_height="50dp">

            <LinearLayout
                android:layout_width="fill_parent"
                android:orientation="horizontal"
                android:weightSum="1"
                android:gravity="center"
                android:layout_height="fill_parent">

                <LinearLayout
                    android:id="@+id/layout_download_data"
                    android:layout_width="fill_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:weightSum="1"
                    android:gravity="center"
                    android:layout_height="fill_parent">

                    <ImageView
                        android:layout_width="20dp"
                        android:gravity="center"
                        android:src="@drawable/ic_download"
                        android:layout_height="20dp" />

                <TextView
                    android:id="@+id/txt_click_download_data"
                    android:text="Download"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/base_down"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>


        </RelativeLayout>

    </RelativeLayout>

</FrameLayout>